@page
@model Telehealth.Web.Pages.Doctors.Skills.SkillModalModel
@{
    Layout = null;
}
<style>
    .subject-item,
    .level-item {
        margin: 5px 0;
        padding: 10px;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        cursor: grab;
    }

    .sortable-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
        height: 22rem;
        overflow: auto;
    }

    .sortable-item {
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        margin-bottom: 5px;
        padding: 10px;
        cursor: grab;
    }
</style>
<form method="post" asp-page="/Doctors/SkillModal">
    <abp-modal size="Large">
        <abp-modal-header title="Main and Sub Specialties"></abp-modal-header>
        <abp-modal-body>
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active"
                            id="pills-home-tab"
                            data-bs-toggle="pill"
                            data-bs-target="#pills-home"
                            type="button"
                            role="tab"
                            aria-controls="pills-home"
                            aria-selected="true">
                        Main Specialties
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link"
                            id="pills-profile-tab"
                            data-bs-toggle="pill"
                            data-bs-target="#pills-profile"
                            type="button"
                            role="tab"
                            aria-controls="pills-profile"
                            aria-selected="false">
                        Sub Specialties
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active"
                     id="pills-home"
                     role="tabpanel"
                     aria-labelledby="pills-home-tab">
                    <div class="input-group p-2">
                        <input class="form-control" id="subject" placeholder="add new Main Specialties" />
                        <a id="add-subject" class="btn btn-primary">Add</a>
                    </div>
                    <label>Main Specialties</label>
                    <ul id="sortable-subjects" class="sortable-list subjects p-2"></ul>
                </div>
                <div class="tab-pane fade"
                     id="pills-profile"
                     role="tabpanel"
                     aria-labelledby="pills-profile-tab">

                    <div class="input-group p-2">
                        <input class="form-control" id="level" placeholder="add new Sub Specialties" />
                        <a id="add-level" class="btn btn-primary">Add</a>
                    </div>

                    <label>Sub Specialties</label>
                    <ul id="sortable-levels" class="sortable-list levels p-2"></ul>
                </div>
            </div>


        </abp-modal-body>
    </abp-modal>
</form>